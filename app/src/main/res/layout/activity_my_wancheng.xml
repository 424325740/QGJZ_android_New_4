<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.dingdan.myjianzhi.MyWanchengActivity"
    android:orientation="vertical"
    android:background="#f5f5f5">
    <LinearLayout
        android:id="@+id/my"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:background="@drawable/bjyuanjiao"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_UserLogo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_yueta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/DIMEN_24PX"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="UI设计师"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_30PX"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/icon_User_1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/DIMEN_20PX"
                        android:src="@mipmap/male" />

                    <ImageView
                        android:id="@+id/icon_User_2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="@dimen/DIMEN_20PX"
                        android:src="@mipmap/famel" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500/天"
                        android:textColor="#fd6a6a"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已完成"
                        android:textColor="@color/mytext_1"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_User_3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/icon_weixin" />

                    <ImageView
                        android:id="@+id/icon_User_4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_zhifubao" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_shouji" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_geren" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_jineng" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_gongsi" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_30PX" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bjyuanjiao"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="开始时间:"
                android:layout_gravity="center"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_26PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="2018-10-10"
                android:layout_gravity="center"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_26PX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="结束时间:"
                android:layout_gravity="center"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_26PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="2018-11-11"
                android:layout_gravity="center"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_26PX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="结算方式:"
                android:layout_gravity="center"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_26PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="日结"
                android:layout_gravity="center"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_26PX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="公司名称:"
                android:layout_gravity="center"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_26PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="北京乞丐科技有限公司"
                android:layout_gravity="center"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_26PX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="公司地址:"
                android:layout_gravity="center"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_26PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="北京市海淀区善缘街1号3层2-208"
                android:layout_gravity="center"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_26PX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="职责介绍:"
                android:layout_gravity="center"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_26PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="喜欢健身，热爱健身，有着自己独到的见解，以提高自身形象为目接。"
                android:layout_gravity="center"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_26PX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="其他要求:"
                android:layout_gravity="center"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_26PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="喜欢健身，热爱健身，有着自己独到的见解，以提高自身形象为目接。"
                android:layout_gravity="center"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_26PX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/DIMEN_40PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="@dimen/DIMEN_160PX"
                android:layout_height="@dimen/DIMEN_64PX"
                android:text="消息"
                android:gravity="center"
                android:background="@drawable/button_selected"
                android:textColor="#fd6a6a"
                android:drawableLeft="@mipmap/icon_zixun"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:paddingRight="@dimen/DIMEN_30PX"
                />
            <TextView
                android:id="@+id/zhijiepingjia"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_width="@dimen/DIMEN_160PX"
                android:layout_height="@dimen/DIMEN_64PX"
                android:text="评价"
                android:gravity="center"
                android:background="@drawable/yuanjiaobut"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40PX"/>
    </LinearLayout>
</LinearLayout>