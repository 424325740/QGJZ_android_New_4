<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    >
        <LinearLayout
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bjyuanjiao"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Modify_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:text="黑名单"
                    android:textColor="@color/mytext_1"
                    android:paddingLeft="@dimen/DIMEN_30PX"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/DIMEN_30PX"
                    android:drawableRight="@mipmap/jiantou"
                    android:paddingRight="@dimen/DIMEN_30PX"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:background="#F5f5f5f5"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="仅WIFI视频播放视频"
                            android:textColor="@color/mytext_1"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/DIMEN_30PX"
                            />

                        <com.qigaikj.parttimejob.view.SwitchButton
                            android:id="@+id/switch_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:background="#F5f5f5f5"
                    />
                <RelativeLayout
                    android:id="@+id/rlClear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:text="清理内存"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX"
                            />

                        <TextView
                            android:id="@+id/tv_Clear_Num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="right"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/jiantou"
                            />

                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_2PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:background="#F5f5f5f5"
                    />
                <TextView
                    android:id="@+id/tv_Update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    android:textColor="@color/mytext_1"
                    android:padding="@dimen/DIMEN_30PX"
                    android:textSize="@dimen/DIMEN_28PX"
                    android:layout_marginTop="1px"
                    android:drawableRight="@mipmap/jiantou"/>
        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_SignOut"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="@dimen/DIMEN_30PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:gravity="center"
            android:background="@drawable/yuanjiaobut"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_28PX" />
</LinearLayout>
