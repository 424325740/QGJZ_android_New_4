<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX"
            android:background="@color/whit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/DIMEN_88PX"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="联系方式"
                android:textColor="@color/text_1"
                android:textSize="@dimen/DIMEN_30PX" />

            <EditText
                android:id="@+id/et_wen_ti_phone"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:background="@color/whit"
                android:gravity="end|center_vertical"
                android:hint="填写邮箱/手机/QQ/微信"
                android:text=""
                android:textColor="@color/mytext_2"
                android:textColorHint="@color/mytext_3"
                android:textSize="@dimen/DIMEN_24PX" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/lines" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="问题类型"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_30PX" />

            <TextView
                android:id="@+id/tv_wen_ti_type"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/DIMEN_10PX"
                android:drawableRight="@mipmap/icon_xialala"
                android:gravity="center_vertical|right"
                android:hint="选择问题"
                android:paddingRight="@dimen/DIMEN_30PX"
                android:textColor="@color/mytext_2"
                android:textColorHint="@color/mytext_3"
                android:textSize="@dimen/DIMEN_24PX" />
        </LinearLayout>


    </LinearLayout>
    <EditText
        android:id="@+id/et_wenti_context"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_220PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao"
        android:hint="请详细填写您需要反馈的信息，我们将及时处理..."
        android:paddingLeft="@dimen/DIMEN_30PX"
        android:paddingRight="@dimen/DIMEN_30PX"
        android:textColorHint="#999999"
        android:paddingBottom="@dimen/DIMEN_90PX"
        android:textSize="@dimen/DIMEN_30PX" />

    <LinearLayout
        android:id="@+id/ll_wenti_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_wenti_image"
            android:layout_width="@dimen/DIMEN_200PX"
            android:layout_height="@dimen/DIMEN_200PX"
            android:layout_marginBottom="@dimen/DIMEN_30PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:src="@mipmap/pic_kuang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="添加图片/问题截图"
            android:textColor="#666666"
            android:textSize="@dimen/DIMEN_28PX" />
    </LinearLayout>
</LinearLayout>