<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_deposit_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_120PX"
            android:background="@color/whit"
            android:paddingLeft="@dimen/DIMEN_30PX">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@mipmap/pic_weixin"
                android:drawablePadding="@dimen/DIMEN_20PX"
                android:gravity="center_vertical"
                android:text="微信钱包"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageView
                android:id="@+id/iv_deposit_wx"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:paddingRight="@dimen/DIMEN_30PX"
                android:src="@mipmap/btn_select_pre" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="#f5f5f5" />

        <RelativeLayout
            android:id="@+id/rl_deposit_zfb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_120PX"
            android:background="@color/whit"
            android:paddingLeft="@dimen/DIMEN_30PX">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@mipmap/pic_zhifubao"
                android:drawablePadding="@dimen/DIMEN_20PX"
                android:gravity="center_vertical"
                android:text="支付宝钱包"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageView
                android:id="@+id/iv_deposit_zfb"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:paddingRight="@dimen/DIMEN_35PX"
                android:src="@mipmap/btn_select_nor" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_120PX"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:background="@color/whit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="提现金额："
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_30PX" />

            <EditText
                android:id="@+id/et_deposit_money"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/whit"
                android:hint="请输入提现金额"
                android:textColorHint="@color/mytext_3"
                android:textSize="@dimen/DIMEN_28PX" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_120PX"
            android:background="@color/whit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:text="验证码："
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_30PX" />

            <EditText
                android:id="@+id/et_deposit_code"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/whit"
                android:hint="请输入验证码"
                android:textColorHint="@color/mytext_3"
                android:textSize="@dimen/DIMEN_28PX" />

            <com.qigaikj.parttimejob.view.TimeButton
                android:id="@+id/btn_deposit_cod"
                android:layout_width="@dimen/DIMEN_160PX"
                android:layout_height="@dimen/DIMEN_54PX"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:background="@drawable/bt_code_background"
                android:text="获取验证码"
                android:textColor="@color/text_3"
                android:textSize="@dimen/DIMEN_24PX" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_deposit_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:layout_marginLeft="@dimen/DIMEN_60PX"
        android:layout_marginRight="@dimen/DIMEN_60PX"
        android:layout_marginBottom="@dimen/DIMEN_30PX"
        android:background="@drawable/yuanjiaobut"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/whit"
        android:textSize="@dimen/DIMEN_30PX" />
</LinearLayout>