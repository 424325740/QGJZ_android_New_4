<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:background="@drawable/bjyuanjiao"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llSkillType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/DIMEN_30PX">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技能类型（必填）"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />\

                    <TextView
                        android:id="@+id/tvSkillType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:layout_marginRight="@dimen/DIMEN_10PX"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="选择技能类型"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <ImageView
                        android:layout_width="@dimen/DIMEN_18PX"
                        android:layout_height="@dimen/DIMEN_10PX"
                        android:layout_gravity="center"
                        android:background="@mipmap/btn_back" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:background="#f5f5f5" />

                <LinearLayout
                    android:id="@+id/llSkillName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:orientation="horizontal"
                    android:padding="@dimen/DIMEN_30PX">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技能名称（必填）"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <TextView
                        android:id="@+id/tvSkillName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:layout_marginRight="@dimen/DIMEN_10PX"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="选择技能名称"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <ImageView
                        android:layout_width="@dimen/DIMEN_18PX"
                        android:layout_height="@dimen/DIMEN_10PX"
                        android:layout_gravity="center"
                        android:background="@mipmap/btn_back" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:background="#f5f5f5" />

                <LinearLayout
                    android:id="@+id/llSkillRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/DIMEN_30PX"
                        android:text="技能介绍（必填）"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <EditText
                        android:id="@+id/etSkillRequiremen"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:layout_marginRight="@dimen/DIMEN_30PX"
                        android:background="#f5f5f5"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="top"
                        android:hint="请简单介绍您的要求..."
                        android:maxLength="50"
                        android:padding="15dp"
                        android:textColor="@color/mytext_1"
                        android:textColorHint="@color/mytext_3"
                        android:textSize="@dimen/DIMEN_26PX" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_40PX"
                    android:background="@color/whit"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:gravity="center_vertical"
                        android:text="请添加您的照片和视频"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <ImageView
                        android:id="@+id/ivImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/DIMEN_30PX"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:layout_marginTop="@dimen/DIMEN_20PX"
                        android:src="@mipmap/icon_addcard_image" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:background="@drawable/bjyuanjiao"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llLineUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_1PX"
                        android:layout_weight="5"
                        android:padding="15dp"
                        android:text="线上服务"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <ImageView
                        android:id="@+id/tvLineUp"
                        android:layout_width="@dimen/DIMEN_36PX"
                        android:layout_height="@dimen/DIMEN_36PX"
                        android:layout_marginRight="@dimen/DIMEN_30PX"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/btn_select_nor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linvisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_1PX"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llMoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:layout_marginTop="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价         钱"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX" />

                        <EditText
                            android:id="@+id/etMoney"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/DIMEN_20PX"
                            android:layout_marginTop="@dimen/DIMEN_20PX"
                            android:background="@null"
                            android:inputType="number"
                            android:gravity="right"
                            android:hint="请输入金额"
                            android:textColorHint="#fd6a6a"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_1PX"
                        android:layout_weight="1.3"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/DIMEN_30PX">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/元"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DIMEN_20PX"
                            android:background="@null"
                            android:drawableRight="@mipmap/icon_release_down"
                            android:textColor="#fd6a6a"
                            android:text="请选择时间"
                            android:textSize="@dimen/DIMEN_26PX" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLineDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_1PX"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_1PX"
                        android:layout_weight="5"
                        android:padding="15dp"
                        android:text="线下服务"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />

                    <ImageView
                        android:id="@+id/tvLineDown"
                        android:layout_width="@dimen/DIMEN_36PX"
                        android:layout_height="@dimen/DIMEN_36PX"
                        android:layout_marginRight="@dimen/DIMEN_30PX"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/btn_select_nor" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linvisible_xia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/DIMEN_1PX"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llMoney_xia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/DIMEN_10PX"
                        android:layout_marginTop="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/DIMEN_30PX">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价         钱"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/DIMEN_20PX"
                            android:background="@null"
                            android:inputType="number"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTime_xia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:layout_marginTop="@dimen/DIMEN_1PX"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/DIMEN_30PX">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时         间"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX" />

                        <TextView
                            android:id="@+id/tvTime_xia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DIMEN_20PX"
                            android:background="@null"
                            android:drawableRight="@mipmap/icon_release_down"
                            android:textColor="@color/mytext_1"
                            android:textSize="@dimen/DIMEN_28PX" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:background="#ffffff"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="选择诚意金"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_28PX" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(诚意金将在完成订单后退还用户)"
                        android:textColor="@color/mytext_3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cyj_1"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0元" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cyj_2"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_24PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30元" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cyj_3"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_24PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="50元" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cyj_4"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_24PX"
                        android:layout_marginRight="@dimen/DIMEN_30PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="100元" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_26PX"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cyj_5"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="150元" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cyj_6"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_24PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="210元" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cyj_7"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_24PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="500元" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cyj_8"
                        android:layout_width="@dimen/DIMEN_138PX"
                        android:layout_height="@dimen/DIMEN_64PX"
                        android:layout_marginLeft="@dimen/DIMEN_24PX"
                        android:layout_marginRight="@dimen/DIMEN_30PX"
                        android:layout_weight="1"
                        android:background="@drawable/filletfilling"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="1000元" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_30PX"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="#f5f5f5"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>