<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.qigaikj.parttimejob.activity.PipeiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_88PX"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/finsh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/DIMEN_30PX"
            android:paddingRight="@dimen/DIMEN_30PX"
            android:layout_gravity="center"
            android:src="@mipmap/icon_quit_black"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/mytext_1"
            android:text="匹配"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lin_shaixuan"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="@dimen/DIMEN_26PX"
                android:textColor="#fd6a6a"
                android:text="筛选"
                />
            <ImageView
                android:layout_width="@dimen/DIMEN_10PX"
                android:layout_height="@dimen/DIMEN_10PX"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:src="@mipmap/btn_fjxialasanjiao"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_width="match_parent"
        android:background="@mipmap/pic_caisebg"
        android:layout_height="384dp">

        <com.qigaikj.parttimejob.util.DiffuseView
            android:id="@+id/diffuseView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:diffuse_color="#ffffff"
            app:diffuse_coreColor="#ffffff"
            app:diffuse_coreImage="@android:drawable/ic_menu_search"
            app:diffuse_coreRadius="100"
            app:diffuse_maxWidth="300"
            app:diffuse_speed="5"
            app:diffuse_width="4"
            />

        <ImageView
            android:layout_width="@dimen/DIMEN_240PX"
            android:layout_height="@dimen/DIMEN_240PX"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_yueta" />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginBottom="@dimen/DIMEN_30PX"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="以成功为您匹配"
                android:textSize="@dimen/DIMEN_32PX"
                android:textColor="@color/mytext_1"/>
            <TextView
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="@dimen/DIMEN_32PX"
                android:textColor="#fd6a6a"/>
            <TextView
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textSize="@dimen/DIMEN_32PX"
                android:textColor="@color/mytext_1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/donghua"
            android:layout_marginTop="@dimen/DIMEN_26PX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="去查看应邀详情"
            android:background="@mipmap/btn_chakan"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/DIMEN_32PX"/>
    </LinearLayout>
</LinearLayout>
