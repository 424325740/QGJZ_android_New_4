<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="手机号:"
                android:textColor="@color/mytext_1"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:textSize="@dimen/DIMEN_36PX"
                />

            <EditText
                android:id="@+id/et_bund_phone"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@color/whit"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:hint="需要绑定的手机号"
                android:textColor="@color/mytext_1"
                android:textColorHint="@color/mytext_2"
                android:textSize="@dimen/DIMEN_28PX" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="验证码:"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_36PX"
                />

            <EditText
                android:id="@+id/tvpassow"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/whit"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:hint="请输入验证码"
                android:textColor="@color/mytext_1"
                android:textColorHint="@color/mytext_2"
                android:textSize="@dimen/DIMEN_28PX" />
            <Button
                android:id="@+id/btn_timer"
                android:layout_weight="1"
                android:layout_width="@dimen/DIMEN_70PX"
                android:layout_height="@dimen/DIMEN_60PX"
                android:layout_gravity="center"
                android:background="@drawable/yuanjiaobut"
                android:text="获取验证码"
                android:textColor="#ffffff"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>