<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadeScrollbars="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_390PX"
                android:background="@mipmap/icon_dlbg"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_96PX"
                    >

                    <ImageView
                        android:id="@+id/iv_Left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:src="@mipmap/icon_quit_white" />

                    <TextView
                        android:id="@+id/tv_login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="登录"
                        android:textColor="@color/whit"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/DIMEN_36PX" />
                </RelativeLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="@color/text_2"
                android:textColorHint="@color/text_3"
                android:drawableLeft="@drawable/select_myeditmobile"
                android:drawablePadding="@dimen/DIMEN_20PX"
                android:layout_marginLeft="@dimen/DIMEN_100PX"
                android:layout_marginRight="@dimen/DIMEN_100PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:textSize="@dimen/DIMEN_28PX"
                />

            <EditText
                android:id="@+id/et_login_passeword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/text_2"
                android:textColorHint="@color/text_3"
                android:drawableLeft="@drawable/select_myeditpassword"
                android:drawablePadding="@dimen/DIMEN_20PX"
                android:layout_marginLeft="@dimen/DIMEN_100PX"
                android:layout_marginRight="@dimen/DIMEN_100PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:textSize="@dimen/DIMEN_28PX" />

            <ImageView
                android:id="@+id/iv_login_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_100PX"
                android:layout_marginRight="@dimen/DIMEN_100PX"
                android:layout_marginTop="@dimen/DIMEN_140PX"
                android:gravity="center"
                android:src="@mipmap/icon_login"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/DIMEN_40PX"
                android:paddingRight="@dimen/DIMEN_40PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tv_forget_PassWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码？"
                    android:gravity="right"
                    android:padding="@dimen/DIMEN_10PX"
                    android:layout_marginRight="@dimen/DIMEN_10PX"
                    android:textSize="@dimen/DIMEN_24PX"
                    />

                <TextView
                    android:id="@+id/tv_Regist_New"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现在注册"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:padding="@dimen/DIMEN_10PX"
                    android:textSize="@dimen/DIMEN_24PX"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_140PX"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/DIMEN_80PX"
                    android:layout_height="@dimen/DIMEN_1PX"
                    android:layout_gravity="center_vertical"
                    android:background="@color/pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:layout_marginRight="@dimen/DIMEN_30PX"
                    android:text="第三方登陆方式"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/DIMEN_28PX" />

                <TextView
                    android:layout_width="@dimen/DIMEN_80PX"
                    android:layout_height="@dimen/DIMEN_1PX"
                    android:layout_gravity="center_vertical"
                    android:background="@color/pink" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_20PX"
                android:layout_marginTop="@dimen/DIMEN_40PX"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_login_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_login_qq" />

                <ImageView
                    android:id="@+id/iv_login_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_login_wx" />

                <ImageView
                    android:id="@+id/iv_login_wb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_login_wb" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>