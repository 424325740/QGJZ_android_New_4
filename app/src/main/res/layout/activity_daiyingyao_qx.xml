<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.dingdan.tayue.DaiyingyaoQXActivity"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:background="@drawable/bjyuanjiao"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_UserLogo"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_yueta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_24PX"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="小姐姐"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_30PX"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="待邀请"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_24PX" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:text="平面模特" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_User_3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/icon_weixin" />

                    <ImageView
                        android:id="@+id/icon_User_4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_zhifubao" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_shouji" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_geren" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_jineng" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_gongsi" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:src="@mipmap/icon_chengyijin"/>
                    <TextView
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textColor="#fd6a6a"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:text="500m"
                        android:textColor="#999999"
                        android:textSize="@dimen/DIMEN_24PX" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/DIMEN_80PX"
                    android:layout_height="@dimen/DIMEN_80PX"
                    android:src="@mipmap/logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="绝地求生"
                    android:textSize="@dimen/DIMEN_30PX"
                    android:textColor="@color/mytext_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="线下服务"
                    android:textColor="@color/mytext_3"
                    android:textSize="@dimen/DIMEN_24PX"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_20PX"
                    android:text="2018-08-31"
                    android:textColor="@color/mytext_3"
                    android:textSize="@dimen/DIMEN_24PX"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15天后过期"
                    android:textColor="@color/mytext_3"
                    android:textSize="@dimen/DIMEN_24PX"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="服务类型:"
                        android:textColor="@color/mytext_2"
                        android:textSize="@dimen/DIMEN_26PX" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:gravity="center"
                        android:text="线下服务"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_26PX" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="时长:"
                        android:textColor="@color/mytext_2"
                        android:textSize="@dimen/DIMEN_26PX" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:gravity="center"
                        android:text="10小时"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_26PX" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xingbie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="性别要求:"
                        android:textColor="@color/mytext_2"
                        android:textSize="@dimen/DIMEN_26PX" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:gravity="center"
                        android:text="女"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_26PX" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jineng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:layout_marginLeft="@dimen/DIMEN_30PX">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="技能要求:"
                        android:textColor="@color/mytext_2"
                        android:textSize="@dimen/DIMEN_26PX" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:gravity="center"
                        android:text="喜欢健身，热爱健身，有着自己的见解。"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_24PX" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/DIMEN_40PX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="@dimen/DIMEN_160PX"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:text="消息"
                    android:gravity="center"
                    android:background="@drawable/button_selected"
                    android:textColor="#fd6a6a"
                    android:drawableLeft="@mipmap/icon_zixun"
                    android:paddingLeft="@dimen/DIMEN_30PX"
                    android:paddingRight="@dimen/DIMEN_30PX"
                    />
                <TextView
                    android:id="@+id/yingyao"
                    android:layout_marginLeft="@dimen/DIMEN_20PX"
                    android:layout_width="@dimen/DIMEN_160PX"
                    android:layout_height="@dimen/DIMEN_64PX"
                    android:text="立即应邀"
                    android:gravity="center"
                    android:background="@drawable/yuanjiaobut"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_40PX"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>