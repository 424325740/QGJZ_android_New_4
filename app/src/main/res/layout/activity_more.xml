<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bjyuanjiao"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvAbout"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="@dimen/DIMEN_32PX"
            android:layout_marginTop="@dimen/DIMEN_1PX"
            android:textColor="@color/mytext_1"
            android:drawableRight="@mipmap/jiantou"
            android:background="@color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="#f5f5f5"/>
        <TextView
            android:id="@+id/tvHelp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="帮助反馈"
            android:textSize="@dimen/DIMEN_32PX"
            android:layout_marginTop="@dimen/DIMEN_1PX"
            android:textColor="@color/mytext_1"
            android:drawableRight="@mipmap/jiantou"
            android:background="@color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="#f5f5f5"/>
        <TextView
            android:id="@+id/tvOpinion"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textSize="@dimen/DIMEN_32PX"
            android:layout_marginTop="@dimen/DIMEN_1PX"
            android:textColor="@color/mytext_1"
            android:drawableRight="@mipmap/jiantou"
            android:background="@color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="#f5f5f5"/>
        <TextView
            android:id="@+id/tvScore"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="应用评分"
            android:textSize="@dimen/DIMEN_32PX"
            android:layout_marginTop="@dimen/DIMEN_1PX"
            android:textColor="@color/mytext_1"
            android:drawableRight="@mipmap/jiantou"
            android:background="@color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="#f5f5f5"/>
        <TextView
            android:id="@+id/tvDisclaimer"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="免责申明"
            android:textSize="@dimen/DIMEN_32PX"
            android:layout_marginTop="@dimen/DIMEN_1PX"
            android:textColor="@color/mytext_1"
            android:drawableRight="@mipmap/jiantou"
            android:background="@color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="#f5f5f5"/>
        <TextView
            android:id="@+id/tvCustomer"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="@dimen/DIMEN_32PX"
            android:layout_marginTop="@dimen/DIMEN_1PX"
            android:textColor="@color/mytext_1"
            android:drawableRight="@mipmap/jiantou"
            android:background="@color/white"
            />
    </LinearLayout>


</LinearLayout>