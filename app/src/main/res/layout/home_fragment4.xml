<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/lin"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_88PX"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="çº¦TA"
            android:textSize="18sp"
            android:textColor="#fd6a6a">
        </TextView>
        <ImageView
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:src="@mipmap/btn_fjxialasanjiao"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:id="@+id/yueTaView"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/yueTaTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#fd6a6a"
            app:tabTextColor="@color/mytext_2" />

        <android.support.v4.view.ViewPager
            android:id="@+id/yueTaVP"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/taYueView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/taYueTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#fd6a6a"
            app:tabTextColor="@color/mytext_2" />

        <android.support.v4.view.ViewPager
            android:id="@+id/taYueVP"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jianZhiView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/jianZhiTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#fd6a6a"
            app:tabTextColor="@color/mytext_2" />

        <android.support.v4.view.ViewPager
            android:id="@+id/jianZhiVP"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabujianzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/fabuTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#fd6a6a"
            app:tabTextColor="@color/mytext_2" />

        <android.support.v4.view.ViewPager
            android:id="@+id/fabuVP"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>
</LinearLayout>