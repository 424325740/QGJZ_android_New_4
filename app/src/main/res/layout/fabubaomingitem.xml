<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <LinearLayout
        android:id="@+id/tayuelin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:background="@drawable/bjyuanjiao"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_UserLogo"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_yueta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_24PX"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="小姐姐"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_30PX"
                        android:textStyle="bold" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/DIMEN_10PX">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/DIMEN_40PX">
                        <TextView
                            android:id="@+id/money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textColor="#fd6a6a"
                            android:textSize="@dimen/DIMEN_24PX"/>
                        <TextView
                            android:id="@+id/unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/天"
                            android:textColor="#fd6a6a"
                            android:textSize="@dimen/DIMEN_24PX"/>
                    </LinearLayout>

                    <View
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4人已报名"
                        android:textColor="@color/mytext_1"
                        android:textSize="@dimen/DIMEN_24PX"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_User_3"
                        android:layout_width="12dp"
                        android:visibility="gone"
                        android:layout_height="12dp"
                        android:src="@mipmap/icon_weixin" />

                    <ImageView
                        android:id="@+id/icon_User_4"
                        android:layout_width="12dp"
                        android:visibility="gone"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_zhifubao" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_shouji" />

                    <ImageView
                        android:id="@+id/state"
                        android:layout_width="12dp"
                        android:visibility="gone"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_geren" />

                    <ImageView
                        android:layout_width="12dp"
                        android:visibility="gone"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_jineng" />

                    <ImageView
                        android:layout_width="12dp"
                        android:visibility="gone"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_gongsi" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:src="@mipmap/icon_chengyijin"/>
                    <TextView
                        android:layout_marginLeft="@dimen/DIMEN_10PX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="200"
                        android:textColor="#fd6a6a"/>
                    <TextView
                        android:id="@+id/distance"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/DIMEN_30PX"
                        android:textColor="#999999"
                        android:textSize="@dimen/DIMEN_24PX" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京乞丐科技有限公司"
                android:textColor="@color/mytext_3"
                android:textSize="@dimen/DIMEN_24PX"/>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区"
                android:textSize="@dimen/DIMEN_24PX"
                android:textColor="@color/mytext_3"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40PX"/>
    </LinearLayout>
</LinearLayout>
