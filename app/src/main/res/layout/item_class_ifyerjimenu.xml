<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_UserLogo"
                android:layout_width="@dimen/DIMEN_140PX"
                android:layout_height="@dimen/DIMEN_140PX"
                android:src="@mipmap/icon_login" />

            <TextView
                android:id="@+id/tv_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:layout_toRightOf="@id/iv_UserLogo"
                android:textSize="@dimen/DIMEN_28PX"
                />

            <TextView
                android:id="@+id/tv_User_Speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户职业"
                android:layout_toRightOf="@id/iv_UserLogo"
                android:layout_below="@id/tv_UserName"
                android:layout_marginTop="@dimen/DIMEN_5PX"
                android:textSize="@dimen/DIMEN_28PX"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_UserLogo"
                android:layout_below="@id/tv_User_Speciality"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/icon_User_1"
                    android:layout_width="@dimen/DIMEN_20PX"
                    android:layout_height="@dimen/DIMEN_20PX"
                    android:src="@mipmap/icon_user_head_image"
                    />
                <ImageView
                    android:id="@+id/icon_User_2"
                    android:layout_width="@dimen/DIMEN_20PX"
                    android:layout_height="@dimen/DIMEN_20PX"
                    android:src="@mipmap/icon_user_head_image"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    />
                <ImageView
                    android:id="@+id/icon_User_3"
                    android:layout_width="@dimen/DIMEN_20PX"
                    android:layout_height="@dimen/DIMEN_20PX"
                    android:src="@mipmap/icon_user_head_image"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    />
                <ImageView
                    android:id="@+id/icon_User_4"
                    android:layout_width="@dimen/DIMEN_20PX"
                    android:layout_height="@dimen/DIMEN_20PX"
                    android:src="@mipmap/icon_user_head_image"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_Distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            >

            <ImageView
                android:id="@+id/iv_Imager_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@mipmap/dh"
                />
            <ImageView
                android:id="@+id/iv_Imager_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@mipmap/dh"
                />
            <ImageView
                android:id="@+id/iv_Imager_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@mipmap/dh"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_User_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cs"
            android:textSize="@dimen/DIMEN_28PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            />

    </LinearLayout>

</LinearLayout>