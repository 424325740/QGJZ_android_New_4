<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whit">

        <RadioGroup
            android:id="@+id/rg_activity_main"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_home1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/main_home1"
                android:gravity="center"
                android:paddingTop="@dimen/DIMEN_8PX"
                android:text="@string/main_home1"
                android:textColor="@drawable/main_home1_text"
                android:textSize="@dimen/DIMEN_22PX" />

            <RadioButton
                android:id="@+id/rb_home2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/main_home2"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingTop="@dimen/DIMEN_8PX"
                android:text="@string/main_home2"
                android:textColor="@drawable/main_home1_text"
                android:textSize="@dimen/DIMEN_22PX" />

            <!--<RadioButton-->
            <!--android:id="@+id/rb_home3"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_weight="1"-->
            <!--android:button="@null"-->
            <!--android:drawableTop="@drawable/bg_fb_function"-->
            <!--android:gravity="center"-->
            <!--android:paddingLeft="0dp"-->
            <!--android:textColor="@drawable/main_home1_text"-->
            <!--android:visibility="visible" />-->

            <RelativeLayout
                android:id="@+id/rb_home3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">


            </RelativeLayout>

            <RadioButton
                android:id="@+id/rb_home4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/main_home4"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingTop="@dimen/DIMEN_8PX"
                android:text="@string/main_home4"
                android:textColor="@drawable/main_home1_text"
                android:textSize="@dimen/DIMEN_22PX" />

            <RadioButton
                android:id="@+id/rb_home5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/main_home5"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:paddingTop="@dimen/DIMEN_8PX"
                android:text="@string/main_home5"
                android:textColor="@drawable/main_home1_text"
                android:textSize="@dimen/DIMEN_22PX" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_96PX">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/tv_main_messg_number"
                        android:layout_width="@dimen/DIMEN_20PX"
                        android:layout_height="@dimen/DIMEN_20PX"
                        android:layout_marginBottom="@dimen/DIMEN_10PX"
                        android:layout_marginLeft="@dimen/DIMEN_35PX"
                        android:layout_marginTop="@dimen/DIMEN_10PX"
                        android:background="@drawable/bg_message_red"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:minHeight="@dimen/DIMEN_15PX"
                        android:minWidth="@dimen/DIMEN_15PX"
                        android:padding="@dimen/DIMEN_3PX"
                        android:text="" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/tv_main_shopp_number"
                        android:layout_width="@dimen/DIMEN_20PX"
                        android:layout_height="@dimen/DIMEN_20PX"
                        android:layout_marginBottom="@dimen/DIMEN_10PX"
                        android:layout_marginLeft="@dimen/DIMEN_35PX"
                        android:layout_marginTop="@dimen/DIMEN_10PX"
                        android:background="@drawable/bg_message_red"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:minHeight="@dimen/DIMEN_15PX"
                        android:minWidth="@dimen/DIMEN_15PX"
                        android:padding="@dimen/DIMEN_3PX"
                        android:text="" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="-70dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fabu" />
    </LinearLayout>

</LinearLayout>