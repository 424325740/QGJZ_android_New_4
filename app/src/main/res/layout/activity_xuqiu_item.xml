<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/delete"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivSkillPicture"
                android:layout_width="@dimen/DIMEN_80PX"
                android:layout_height="@dimen/DIMEN_80PX"
                android:src="@mipmap/icon_yueta"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                >

                <TextView
                    android:id="@+id/tvSkillTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题名称"
                    android:textColor="@color/mytext_1"
                    android:textSize="@dimen/DIMEN_30PX"
                    />

                <TextView
                    android:id="@+id/tvSkillTime"
                    android:layout_marginTop="@dimen/DIMEN_10PX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间"
                    android:textColor="@color/mytext_3"
                    android:textSize="@dimen/DIMEN_24PX"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技能要求"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_24PX"
                />

            <TextView
                android:id="@+id/tvSkillIntroduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍内容"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_24PX"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别要求"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_24PX"
                />

            <TextView
                android:id="@+id/Sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_24PX"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvServiceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上服务"
                android:textColor="@color/mytext_1"
                android:textSize="@dimen/DIMEN_24PX"
                />

            <TextView
                android:id="@+id/tvSkillMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务价格"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_24PX"
                android:layout_marginLeft="@dimen/DIMEN_40PX"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lines"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_20PX"
            >

            <com.qigaikj.parttimejob.view.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/tv_SwitchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已开启接单"
                android:textSize="@dimen/DIMEN_28PX"
                android:textColor="@color/mytext_1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/switch_button"
                android:layout_marginRight="@dimen/DIMEN_20PX"
                />

            <TextView
                android:id="@+id/tvEdit"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:textSize="@dimen/DIMEN_20PX"
                android:textColor="@color/white"
                android:background="@drawable/yuanjiaobut"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>