<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_64PX"
            android:gravity="right"
            >
            <ImageView
                android:id="@+id/find"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_xxx"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择时间单位"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_30PX"
            android:textColor="@color/mytext_1"/>
        <LinearLayout
            android:layout_marginTop="@dimen/DIMEN_48PX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/shi"
                android:layout_width="@dimen/DIMEN_160PX"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="时"
                android:textColor="@color/mytext_2"
                android:background="@drawable/yuanjiaohome"
                android:padding="@dimen/DIMEN_24PX"/>
            <TextView
                android:id="@+id/tian"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_width="@dimen/DIMEN_160PX"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/yuanjiaohome"
                android:padding="@dimen/DIMEN_24PX"
                android:textColor="@color/mytext_2"
                android:text="天"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40PX"/>
    </LinearLayout>

</LinearLayout>
