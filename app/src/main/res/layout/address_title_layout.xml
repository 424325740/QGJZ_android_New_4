            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_15PX"
            android:layout_weight="1"
            android:background="@drawable/bg_address_city"
            android:gravity="center"
            android:paddingBottom="@dimen/DIMEN_15PX"
            android:paddingTop="@dimen/DIMEN_15PX"
            android:text="@string/city_4"

            android:textColor="@color/text_home_1"
            android:textSize="@dimen/DIMEN_28PX" />

        <TextView
            android:id="@+id/tv_city_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_15PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_15PX"
            android:layout_weight="1"
            android:background="@drawable/bg_address_city"
            android:gravity="center"
            android:paddingBottom="@dimen/DIMEN_15PX"
            android:paddingTop="@dimen/DIMEN_15PX"
            android:text="@string/city_5"
            android:textColor="@color/text_home_1"
            android:textSize="@dimen/DIMEN_28PX" />

        <TextView
            android:id="@+id/tv_city_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_15PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_15PX"
            android:layout_weight="1"
            android:background="@drawable/bg_address_city"
            android:gravity="center"
            android:paddingBottom="@dimen/DIMEN_15PX"
            android:paddingTop="@dimen/DIMEN_15PX"
            android:text="@string/city_6"
            android:textColor="@color/text_home_1"
            android:textSize="@dimen/DIMEN_28PX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_city_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_15PX"
