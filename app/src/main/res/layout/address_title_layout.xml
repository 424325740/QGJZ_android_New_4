            android:paddingBottom="@dimen/DIMEN_15PX"
            android:paddingTop="@dimen/DIMEN_15PX"
            android:text="@string/city_3"
            android:textColor="@color/text_home_1"
            android:textSize="@dimen/DIMEN_28PX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:gravity="center_vertical"
