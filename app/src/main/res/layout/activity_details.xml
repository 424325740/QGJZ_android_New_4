<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:background="@mipmap/pic_bg_red"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX">
            <ImageView
                android:id="@+id/iv_finsh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/DIMEN_30PX"
                android:paddingRight="@dimen/DIMEN_30PX"
                android:layout_gravity="center"
                android:src="@mipmap/icon_back_white"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/pengyouquan"
                android:layout_width="@dimen/DIMEN_36PX"
                android:layout_height="@dimen/DIMEN_36PX"
                android:src="@mipmap/icon_erweima"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/jubao"
                android:layout_width="@dimen/DIMEN_36PX"
                android:layout_height="@dimen/DIMEN_36PX"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:src="@mipmap/icon_jubao"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/User_avator"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="@dimen/DIMEN_30PX"
                    android:src="@mipmap/logo"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="@dimen/DIMEN_3PX" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/User_avator"
                    android:layout_alignEnd="@+id/User_avator"
                    android:src="@mipmap/icon_girl" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_height="70dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/uname"
                    android:layout_marginTop="@dimen/DIMEN_30PX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哈利路亚"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/DIMEN_36PX"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21岁"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/DIMEN_24PX"/>
                    <TextView
                        android:id="@+id/adders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_20PX"
                        android:text="北京市朝阳区"
                        android:textSize="@dimen/DIMEN_24PX"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            app:tabSelectedTextColor="#fd6a6a"
            app:tabTextColor="@color/mytext_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/goin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_88PX"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_64PX"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_weight="1"
                android:background="@drawable/button_selected"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_fenxiang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="分享"
                    android:textColor="#fd6a6a" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_64PX"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_weight="1"
                android:background="@drawable/button_selected"
                android:gravity="center">

                <ImageView
                    android:id="@+id/xingxing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_guanzhu_nor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="关注"
                    android:textColor="#fd6a6a" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zixun"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_64PX"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_weight="1"
                android:background="@drawable/button_selected"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_zixun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="咨询"
                    android:textColor="#fd6a6a" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_64PX"
                android:layout_marginLeft="@dimen/DIMEN_10PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_weight="2"
                android:background="@drawable/yuanjiaobut"
                android:gravity="center">

                <TextView
                    android:id="@+id/fjyueta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10PX"
                    android:text="约她"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>