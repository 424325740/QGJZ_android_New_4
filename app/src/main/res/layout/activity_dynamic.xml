<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:orientation="vertical"
        android:padding="@dimen/DIMEN_20PX"
        android:background="@drawable/bjyuanjiao">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_320PX">

            <EditText
                android:id="@+id/etContext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_320PX"
                android:padding="@dimen/DIMEN_20PX"
                android:gravity="top"
                android:textSize="@dimen/DIMEN_24PX"
                android:maxLength="300"
                android:hint="请简单介绍您的技能...."
                android:textColor="@color/mytext_1"
                android:textColorHint="@color/mytext_3"
                android:background="@drawable/shape_background" />

            <TextView
                android:id="@+id/tvContextNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/DIMEN_20PX"
                android:textColor="@color/mytext_3"
                android:padding="@dimen/DIMEN_20PX"
                android:text="0/300字"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whit"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="请添加您的照片和视频"
                android:textColor="@color/mytext_2"
                android:textSize="@dimen/DIMEN_28PX" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:layout_marginBottom="@dimen/DIMEN_20PX"
                android:src="@mipmap/icon_addcard_image" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>