<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.my.YouHuiJuanActivity"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_bg"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginRight="@dimen/DIMEN_20PX"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="351.63"
            android:textSize="@dimen/DIMEN_80PX"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="余额(元)"
            android:textSize="@dimen/DIMEN_28PX"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的账单"
        android:textColor="@color/mytext_1"
        android:textSize="@dimen/DIMEN_30PX"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_140PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健身"
                android:textColor="@color/mytext_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/DIMEN_18PX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018/5/11"/>
                <TextView
                    android:layout_marginTop="@dimen/DIMEN_18PX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~2018/5/11"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/DIMEN_50PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:gravity="right"
            android:text="+30.00"
            android:textSize="@dimen/DIMEN_30PX"
            android:textColor="#fd6a6a"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_140PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_30PX"
        android:layout_marginRight="@dimen/DIMEN_30PX"
        android:background="@drawable/bjyuanjiao">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健身"
                android:textColor="@color/mytext_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/DIMEN_18PX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018/5/11"/>
                <TextView
                    android:layout_marginTop="@dimen/DIMEN_18PX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~2018/5/11"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/DIMEN_50PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:gravity="right"
            android:text="-270.00"
            android:textSize="@dimen/DIMEN_30PX"
            android:textColor="#32abff"/>
    </LinearLayout>
</LinearLayout>